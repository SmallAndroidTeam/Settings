<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="84px"
    android:paddingTop="5dp"
    android:background="@color/transparent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="538">

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="40"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/bt_saved_item_choosed"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="32"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        android:src="@drawable/bw_choose" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/bt_saved_item_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="344"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:textSize="@dimen/bwTextSize"
        android:textColor="@color/bw_text_main" />

    <ImageView
        android:id="@+id/bt_item_security"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="32"
        android:layout_gravity="center"
        android:scaleType="fitCenter" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="70"
        android:visibility="invisible"/>

</LinearLayout>
